<odoo>
    <data>

        <template id="my_controller_form" name="Document Upload">
            <t t-call="website.layout">
                <div class="oe_structure"/>
                <div class="container mt-5">
                    <div id="wrap">
                        <div class="oc-sheet clearfix">
                            <form action="/submit_data"
                                  method="post" name="formOrg" role="form"
                                  style="z-index:1 !important; position:relative !important"
                                  enctype="multipart/form-data">
                                <fieldset id="fs_data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <div class="form-bg">
                                        <h3 width="100%" border="1" bordercolor="#999999" bgcolor="#F7F7EF" border-collapse="collapse" align="center">
                                        Grievance Portal
                                        </h3>
                                    </div>
                                    <t t-set="employee_ids" t-value="request.env['hr.employee'].search([])"/>

                                    <div class="form-group mt-3">
                                        <label for="email">Employee :</label>
                                        <select name='employee_id' id='employee_id' class="form-control" required='1'>
                                            <option value="" selected="1" disabled="1">-- Select Employee --</option>
                                            <t t-foreach="employee_ids" t-as="employee_id">
                                                <option t-att-value="employee_id.id">
                                                    <t t-esc="employee_id.name"/>
                                                </option>
                                            </t>
                                        </select>

                                    </div>


                                    <div class="form-group mt-3">
                                        <label for="description">Description :</label>
                                        <input type="description" id="description" name="description" class="form-control" required='1'/>
                                    </div>
                                    <t t-set="grievance_types" t-value="request.env['grievance.type'].search([])"/>

                                    <div class="form-group mt-3">
                                        <label for="email">Grievance Type :</label>
                                        <select name='grievance_type' id='grievance_type' class="form-control" required='1'>
                                            <option value="" selected="1" disabled="1">-- Select Grievance Type --</option>
                                            <t t-foreach="grievance_types" t-as="grievance_type">
                                                <option t-att-value="grievance_type.id">
                                                    <t t-esc="grievance_type.name"/>
                                                </option>
                                            </t>
                                        </select>

                                    </div>
                                    <t t-set="departments" t-value="request.env['hr.department'].search([])"/>
                                    <div class="form-group mt-3">
                                        <label for="email">Departments :</label>
                                        <select name='department' id='department' class="form-control" required='1'>
                                            <option value="" selected="1" disabled="1">-- Select Department --</option>
                                            <t t-foreach="departments" t-as="department">
                                                <option t-att-value="department.id">
                                                    <t t-esc="department.name"/>
                                                </option>
                                            </t>
                                        </select>

                                    </div>

                                    <div class="form-group">
                                        <label for="severity">Severity:</label>
                                        <select name="severity" id="severity" class="form-control">
                                        <option value="" selected="1" disabled="1">-- Select Severity --</option>
                                            <option value="0">Very Low</option>
                                            <option value="1">Low</option>
                                            <option value="2">Normal</option>
                                            <option value="3">High</option>
                                            <!-- Add more options as needed -->
                                        </select>
                                    </div>
                                     <div class="form-group mt-3">
                                        <label for="files">Select files:</label>
                                        <input type="file" id="document" name="document" class="form-control-file" multiple="True"/><br/>
                                        <!-- <input type="file" id="document" name="document" class="form-control-file" required='1'/> -->
                                    </div>
                                    <div class="clearfix oe_login_buttons mt-3" style="margin-bottom:20px;">
                                        <button name="submitDocument" id="submit_document" class="btn btn-primary">Submit
                                        </button>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>
        <template id="RegisterMessage" name="Register Message">
            <t t-call="website.layout">
                <div class="oe_structure"/>
                <div class="container mt-5">
                    <div id="wrap1">
                        <div class="oc-sheet clearfix">
                            <form id="registerMsg" method="post"
                                  name="registerMsg" role="form"
                                  style="z-index:1 !important; position:relative !important"
                                  enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token"
                                       t-att-value="request.csrf_token()"/>
                                    <fieldset
                                            style="
                                                width: 400px;
                                                text-align: center;
                                                margin-left: 30%;
                                                background-color: rgba(255, 255, 255, 0.86);
                                                float: left;
                                                /* margin: 0px; */

                                                z-index: 99999999;

                                                /* height: 500px; */
                                                display: block;
                                                padding: 25px; border:solid #000 2px;"
                                        >
                                            <h3 align="center">Thank You!!! You are registered.... Your Grievance Ref : <t t-esc='grievance_id'/> </h3>
                                            <br/>
                                    </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="portal_my_grievances" name="My Grievances">
          <t t-call="portal.portal_layout">
              <t t-set="breadcrumbs_searchbar" t-value="True"/>

              <t t-call="portal.portal_searchbar">
                  <t t-set="title">Your Grievances</t>
              </t>
              <div t-if="not orders" class="alert alert-warning" role="alert">
                  There are currently no Grievance for your account.
              </div>
              <t t-if="orders" t-call="portal.portal_table">
                  <thead>
                      <tr class="active">
                          <th class="text-center">Gravience #</th>
                          <th class="text-center">Grievance Type</th>
                          <th class="text-center">Department</th>
                          <th class="text-end">Date</th>
                          <th class="text-center"/>
                      </tr>
                  </thead>
                  <t t-foreach="orders" t-as="order">
                      <tr>
                          <!-- <td><a t-att-href="order.get_portal_url()"><t t-out="order.name"/></a></td> -->
                          <td class="text-center"><t t-out="order.employee_id.name"/></td>
                          <td class="text-center"><t t-out="order.grievance_type_id.name"/></td>
                          <td class="text-center"><t t-out="order.department_id.name"/></td>
                          <td class="text-end">
                              <span t-field="order.create_date" t-options="{'widget': 'date'}"/>&amp;nbsp;
                              <span class='d-none d-md-inline' t-field="order.create_date" t-options="{'time_only': True}"/>
                          </td>
                      </tr>
                  </t>
              </t>
          </t>
      </template>

    </data>
</odoo>
